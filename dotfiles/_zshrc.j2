{% if path.ohmyzsh is dir -%}
{{ "Oh-My-Zsh stuff" | hr }}
# Path and theme for oh-my-zsh. See /.oh-my-zsh/themes/ for all the themes.
ZSH=$HOME/.oh-my-zsh
ZSH_THEME="gnzh"

{#-
# Set to this to use case-sensitive completion
# CASE_SENSITIVE="true"

# Uncomment this to disable bi-weekly auto-update checks
# DISABLE_AUTO_UPDATE="true"

# Uncomment to change how often before auto-updates occur? (in days)
# export UPDATE_ZSH_DAYS=13

# Uncomment following line if you want to disable colors in ls
# DISABLE_LS_COLORS="true"

# Uncomment following line if you want to disable autosetting terminal title.
# DISABLE_AUTO_TITLE="true"

# Uncomment following line if you want to disable command autocorrection
# DISABLE_CORRECTION="true"

# Uncomment following line if you want red dots to be displayed while waiting for completion
# COMPLETION_WAITING_DOTS="true"

# Uncomment following line if you want to disable marking untracked files under
# VCS as dirty. This makes repository status check for large repositories much,
# much faster.
# DISABLE_UNTRACKED_FILES_DIRTY="true"
#}

# Plugins to load. Plugin locations: ~/.oh-my-zsh/plugins/, ~/.oh-my-zsh/custom/plugins/
{% with plugins,lsep=([], "\n   ") -%}
    {%- do plugins.append(lsep) -%}

    {#- basic stuff - could add tests for installed utils -#}
    {%- do plugins.extend(["git", "svn", "python", "pip", "sudo", "gnu-utils", lsep,]) -%}
    {%- do plugins.extend(["history", "dirhistory", "last-working-dir", lsep,]) -%}
    {%- do plugins.extend(["catimg", "encode64", "urltools", "nyan", "web-search", lsep,]) -%}

    {#- clipcopy/clippaste wrappers -#}
    {%- if "pbcopy" is installed or "xclip" is installed -%}
        {%- do plugins.append("clipboard") -%}
    {%- endif -%}

    {#- os-specific plugins -#}
    {% if os.type == "osx" -%}
        {%- do plugins.extend(["osx", "brew", "terminalapp", "Forklift",]) -%}
    {%- elif os.type == "linux" -%}
        {%- if os.flavor == "debian" -%}
            {%- do plugins.append("debian") -%}
        {%- elif os.flavor == "ubuntu" -%}
            {%- do plugins.append("ubuntu") -%}
        {%- endif -%}
    {%- endif -%}

    {%- do plugins.append("\n") -%}

plugins=({{ plugins|join(" ") }})
{%- endwith %}

# Enable oh-my-zsh.
source $ZSH/oh-my-zsh.sh
{%- endif %}

{{ "Further zsh customizations" | hr }}
autoload -U zmv
autoload -U zcp

{% include 'include/sh_env.inc' -%}
{% include 'include/sh_locale.inc' -%}
{% include 'include/sh_aliases.inc' -%}
{% include 'include/sh_functions.inc' %}

{{ "Initialize other zsh-specific stuff" | hr }}
{% if "$HOME/.opam/opam-init/init.zsh" is file -%}
### OPAM configuration
. "$HOME"/.opam/opam-init/init.zsh > /dev/null 2> /dev/null || true
{%- endif %}

